{
  "manifest_version": 3,
  "name": "Auto Refresh",
  "version": "1.1",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  }
}
